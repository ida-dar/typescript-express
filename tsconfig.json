{
  "compilerOptions": {
      "sourceMap": true,
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "./dist",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}